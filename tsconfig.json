{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./client/src/components/*"],
      "@/utils/*": ["./shared/*"],
      "@/types/*": ["./server/types.d.ts"],
      "api/_lib/*": ["./api/_lib/*"],
      "server/*": ["./server/*"]
    }
  },
  "include": [
    "server/**/*",
    "shared/**/*",
    "api/**/*"
  ],
  "exclude": [
    "node_modules",
    "client",
    "dist",
    "test-files",
    "scripts"
  ]
}
